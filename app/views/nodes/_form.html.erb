<%= form_with(model: node, class: "node-form") do |form| %>

  <% if node.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(node.errors.count, "error") %> prohibited this node from being saved:</h2>

      <ul>
        <% node.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%# <%= form.label :node_title %>
    <%= form.text_field :node_title, class: "title-input", placeholder: "Node's title" %>
  </div>
  <%if type %> <%# si un node type est passÃ© en params, on l'utilise, sinon on demande %>
    <%= form.hidden_field :node_type, value: type %> 
  <%else%>
    <%= form.select :node_type, ntypes %> <%# ntypes est dans sessionshelper %>
  <%end%>
  <div>
    <%# <%= form.label :public_description %>
    <%= form.text_area :public_description, class: "description-text-input", placeholder: "Node's description" %>
  </div>
  <%if world_id%>
    <%= form.hidden_field :world_id, value: world_id %> 
  <%end%>

  <div>
    <%= form.submit "Create Node", class: "input-btn" %>
  </div>
<% end %>
